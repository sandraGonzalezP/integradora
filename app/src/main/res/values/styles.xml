<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!--Estilo del menu-->
    <style name="menu_labels_style">
        <item name="android:background">
            @drawable/fab_label_background
        </item>
        <item name="android:textColor">
            #020202
        </item>
    </style>

    <!-- Soup-Letters-->
   <style name="CeldaSopaLetras" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:background">#4e0429</item>

    </style>
    <!-- Botones Rojos -->
    <style name="estiloBotonRojo" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#8f0606</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Botones Azul Claro -->
    <style name="estiloBotonAzulClaro" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#bce2ef</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="PalabraObjetivo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grisPalabras</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    

</resources>
